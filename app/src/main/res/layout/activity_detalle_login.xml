<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data> 
       <variable
                name="login"
                type="com.example.login.Login"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".detalle_login">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@drawable/login"
                android:id="@+id/imageView"
                android:src="@drawable/login"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                android:textAlignment="center"
                app:layout_constraintVertical_bias="0.0"
                android:padding="10dp"/>

        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rtg_validacion"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintVertical_bias="0.909"
                android:textAlignment="center"
                android:progressTint="@color/amarillo"/>
        <TextView
                android:hint="mostrar email"
                android:text="@{login.email}"
                android:textAlignment="center"
                android:textColor="#072FA8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txt_email"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.817"/>
        <TextView
                android:text="@{login.rol}"
                android:hint="mostrar rol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txt_rol"
                app:layout_constraintTop_toTopOf="parent"
                android:textAlignment="center"
                android:textColor="#072FA8"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintVertical_bias="0.74"/>
        <TextView
                android:text="@{login.usuario}"
                android:hint="mostrar usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txt_usuario"
                app:layout_constraintTop_toTopOf="parent"
                android:textAlignment="center"
                android:textColor="#072FA8"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintVertical_bias="0.662"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtValcontraseA"
                android:textAlignment="center"
                android:textColor="#F44336"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.957"/>
        <TextView
                android:text="Usuario:"
                android:textAlignment="center"
                android:textColor="#C654DA"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.488"
                app:layout_constraintVertical_bias="0.626"/>
        <TextView
                android:text="Rol:"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="#C654DA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintVertical_bias="0.698"/>
        <TextView
                android:text="Email:"
                android:textAlignment="center"
                android:textColor="#C654DA"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.778"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>